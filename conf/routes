# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Initial page
GET     /                           controllers.Application.index()
GET		/deslogar					controllers.Application.deslogar()

# Log in page
GET		/login						controllers.Application.login()
POST	/login						controllers.Application.logon()

# Sign in page
GET		/cadastro					controllers.Application.signIn()
POST	/cadastro					controllers.Application.addUser()

# Home page
GET		/evaluation					controllers.Application.home()

# Question page
GET		/novaEnquete				controllers.Application.newQuestion()
POST	/novaEnquete				controllers.Application.addQuestion()
GET		/enquete					controllers.Application.question()
GET		/minhasEnquetes				controllers.Application.myQuestions()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
